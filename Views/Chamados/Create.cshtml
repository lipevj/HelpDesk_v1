@model HelpDeskTCC.Models.Chamados
    @using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Inserir Ticket";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { style = "width: 400px", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descrição, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-10">
                @Html.TextArea("Descrição", null, new { style = "width: 700px", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Descrição, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Solicitante, new { @class = "control-label col-md-1" })
            <div class="col-md-10">
              
                @User.Identity.GetUserName()
                @Html.EditorFor(model => model.Solicitante, new { htmlAttributes = new { style = "width: 300px", @class = "form-control" } })
                @*@Html.DropDownList("Solicitante", null, htmlAttributes: new { style = "width: 300px", @class = "form-control" })*@
                @Html.ValidationMessageFor(model => model.Solicitante, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PrioridadeId, "Prioridade", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-1">
                @Html.DropDownList("PrioridadeId", null, htmlAttributes: new { style = "width: 300px", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PrioridadeId, "", new { @class = "text-danger" }) 
            </div>
        </div>

      

        <div class="form-group">
            @Html.LabelFor(model => model.CategoriaId, "Categoria", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-1">
                @Html.DropDownList("CategoriaId", null, htmlAttributes: new { style = "width: 300px", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CategoriaId, "", new { @class = "text-danger" })
            </div>
        </div>

     
        <div class="form-group">
            <div class="col-md-offset-3">
                <input type="submit" value="Salvar" class="btn btn-info" />
            </div>
        </div>
    </div>
}

<div>
    
    @Html.ActionLink("Voltar", "meusChamados" ,null , new { @class = "btn btn-info"  })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
